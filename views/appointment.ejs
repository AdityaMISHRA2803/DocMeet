<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- iziToast CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/css/iziToast.min.css">
  <title>Appointment</title>
  <style>
    /* Minimal custom CSS for navigation */
    .navigation {
      position: fixed;
      left: 0;
      top: 0;
      height: 100%;
      background: #0d6efd;
      width: 80px;
      overflow: hidden;
      transition: width 0.5s;
      z-index: 1000;
    }
    
    .navigation:hover {
      width: 250px;
    }
    
    .navigation ul {
      padding-left: 0;
      margin-top: 20px;
    }
    
    .navigation li {
      list-style: none;
      width: 100%;
    }
    
    .navigation li a {
      display: flex;
      align-items: center;
      text-decoration: none;
      color: white;
      padding: 15px 20px;
      white-space: nowrap;
    }
    
    .navigation li a:hover {
      background: rgba(255, 255, 255, 0.1);
    }
    
    .navigation li a .icon {
      font-size: 1.5rem;
      min-width: 50px;
      display: inline-flex;
      justify-content: center;
    }
    
    .navigation li a .title {
      margin-left: 10px;
    }
    
    .navigation li.active a {
      background: rgba(255, 255, 255, 0.2);
    }
    
    /* Main content margin */
    .main-content {
      margin-left: 80px;
      transition: margin-left 0.5s;
    }
    
    .navigation:hover ~ .main-content {
      margin-left: 250px;
    }
    
    /* Calendar styling */
    .calendar-card {
      background: linear-gradient(135deg, #0d6efd, #0b5ed7);
      color: white;
      border-radius: 0.375rem;
    }
    
    .calendar th {
      background-color: #212529 !important;
    }
    
    .calendar-day {
      height: 40px;
      cursor: pointer;
      transition: all 0.2s;
    }
    
    .calendar-day:hover {
      background-color: #e9ecef;
    }
    
    .calendar-day.today {
      background-color: #0d6efd;
      color: white;
      font-weight: bold;
    }
    
    .calendar-day.selected {
      background-color: #198754;
      color: white;
      font-weight: bold;
    }
    
    /* Responsive table */
    @media (max-width: 768px) {
      .table-responsive-sm {
        display: block;
        width: 100%;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
      }
    }
  </style>
</head>

<body>
  <div class="navigation">
    <ul>
      <li class="list active">
        <a href="/dashboard">
          <span class="icon"><i class="fas fa-home"></i></span>
          <span class="title">Dashboard</span>
        </a>
      </li>
      <li class="list">
        <a href="/appointment">
          <span class="icon"><i class="fas fa-calendar-check"></i></span>
          <span class="title">Appointment</span>
        </a>
      </li>
      <li class="list">
        <a href="/disease">
          <span class="icon"><i class="fas fa-search-plus"></i></span>
          <span class="title">Search Disease</span>
        </a>
      </li>
      <li class="list">
        <a href="/calorie_tracker">
          <span class="icon"><i class="fas fa-utensils"></i></span>
          <span class="title">Diet Tracker</span>
        </a>
      </li>
      <li class="list">
        <a href="/profile">
          <span class="icon"><i class="fas fa-user-cog"></i></span>
          <span class="title">Edit Profile</span>
        </a>
      </li>
      <li class="list">
        <a href="#">
          <span class="icon"><i class="far fa-question-circle"></i></span>
          <span class="title">Help</span>
        </a>
      </li>
      <li class="list">
        <a href="/auth/logout">
          <span class="icon"><i class="fas fa-sign-out-alt"></i></span>
          <span class="title">Sign Out</span>
        </a>
      </li>
    </ul>
  </div>

  <div class="main-content">
    <div class="container py-4">
      <div class="row mb-4">
        <div class="col-12">
          <h2 class="text-primary">Appointment Management</h2>
          <p class="text-muted">The appointments are for the current month only</p>
        </div>
      </div>

      <div class="row mb-5">
        <div class="col-lg-8 mx-auto">
          <div class="card calendar-card shadow">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title text-white mb-0" id="month"></h5>
                <h5 class="card-title text-white mb-0" id="year"></h5>
              </div>
              <div class="table-responsive">
                <table class="table table-bordered mb-0" id="calendar">
                  <thead>
                    <tr class="bg-dark text-white">
                      <th scope="col" class="text-center">Mo</th>
                      <th scope="col" class="text-center">Tu</th>
                      <th scope="col" class="text-center">We</th>
                      <th scope="col" class="text-center">Th</th>
                      <th scope="col" class="text-center">Fr</th>
                      <th scope="col" class="text-center">Sa</th>
                      <th scope="col" class="text-center">Su</th>
                    </tr>
                  </thead>
                  <tbody class="bg-light" id="days"></tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row mb-5">
        <div class="col-lg-8 mx-auto">
          <div class="card shadow">
            <div class="card-body">
              <h4 class="card-title mb-4">Create New Appointment</h4>
              <form id="form_create_appointment" method="POST" action="/appointment">
                <div class="row g-3 mb-3">
                  <div class="col-md-6">
                    <label for="date" class="form-label required">Date</label>
                    <input type="text" class="form-control" name="date" id="date" required
                      data-bs-toggle="tooltip" data-bs-placement="top" 
                      title="You can select any date from today clicking on the number in the calendar">
                  </div>
                  <div class="col-md-6">
                    <label for="description" class="form-label">Description of problem</label>
                    <input type="text" class="form-control" id="description" name="description">
                  </div>
                </div>
                <div class="row g-3 mb-4">
                  <div class="col-md-6">
                    <label for="start_time" class="form-label required">Start Time</label>
                    <input type="text" class="form-control" name="start_time" id="start_time" required>
                  </div>
                  <div class="col-md-6">
                    <label for="end_time" class="form-label required">End Time</label>
                    <input type="text" class="form-control" id="end_time" name="end_time" required>
                  </div>
                </div>
                <div class="row g-3">
                  <div class="col-md-6">
                    <button type="reset" class="btn btn-warning w-100">Clear Form</button>
                  </div>
                  <div class="col-md-6">
                    <button type="submit" class="btn btn-primary w-100">Make Appointment</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-10 mx-auto">
          <div class="card shadow">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="card-title mb-0">Your Appointments</h4>
                <button type="button" class="btn btn-danger" id="btn_clear_storage" onclick="clear_storage()">
                  <i class="fas fa-trash me-1"></i> Clear All
                </button>
              </div>
              
              <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped mb-0" id="appointment_list">
                  <thead class="table-dark">
                    <tr>
                      <th scope="col" class="text-center">Date</th>
                      <th scope="col" class="text-center">Description</th>
                      <th scope="col" class="text-center">Start time</th>
                      <th scope="col" class="text-center">End time</th>
                      <th scope="col" class="text-center">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%if(appointments.length> 0) {%>
                      <% for(var i=0;i<appointments.length;i++) { %>
                        <tr>
                          <td class="text-center"><%= appointments[i].date %></td>
                          <td class="text-truncate" style="max-width: 200px;"><%= appointments[i].description %></td>
                          <td class="text-center"><%= appointments[i].start_time %></td>
                          <td class="text-center"><%= appointments[i].end_time %></td>
                          <td class="text-center">
                            <button class="btn btn-danger btn-sm" onclick="Delete(this)">
                              <i class="fas fa-trash"></i>
                            </button>
                          </td>
                        </tr>
                      <% } %>
                    <% } else { %>
                      <tr>
                        <td colspan="5" class="text-center text-muted py-4">No appointments scheduled</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- Bootstrap 5 JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Inputmask -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.6/jquery.inputmask.min.js"></script>
  <!-- iziToast JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/js/iziToast.min.js"></script>
  
  <script src="/Appointment.js"></script>
  <script>
    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', function() {
      var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
      var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
      });
    });

    function Delete(x) {
      x.closest('tr').remove();
    }
    
    // Navigation active state
    document.querySelectorAll('.navigation li').forEach(item => {
      item.addEventListener('click', function() {
        document.querySelectorAll('.navigation li').forEach(i => i.classList.remove('active'));
        this.classList.add('active');
      });
    });
  </script>
</body>

</html>
