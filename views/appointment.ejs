<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- IziToast -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/css/iziToast.min.css">
  <title>Appointment</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f8f9fa;
    }
    
    /* Calendar styling */
    .calendar-container {
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
    
    .calendar-header {
      background: linear-gradient(19deg, rgb(28, 117, 250), rgb(34, 2, 159));
      color: white;
      padding: 15px;
      text-align: center;
    }
    
    .calendar-table th {
      background: #343a40;
      color: white;
      text-align: center;
      padding: 12px;
    }
    
    .calendar-table td {
      text-align: center;
      padding: 12px;
      cursor: pointer;
      transition: all 0.2s;
    }
    
    .calendar-table td:hover {
      background: #e9ecef;
    }
    
    .calendar-table td.today {
      background: #168bdf;
      color: white;
      font-weight: bold;
    }
    
    .calendar-table td.selected {
      background: #2956d3;
      color: white;
    }
    
    /* Form styling */
    .appointment-form {
      background: white;
      border-radius: 10px;
      padding: 25px;
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
    }
    
    /* Appointments table */
    .appointments-table {
      background: white;
      border-radius: 10px;
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }
    
    .appointments-table th {
      background: linear-gradient(19deg, rgb(28, 117, 250), rgb(34, 2, 159));
      color: white;
    }
    
    .required:after {
      content: " *";
      color: red;
    }
    
    /* Navigation styling */
    .navigation {
      width: 80px;
      height: 100vh;
      background: linear-gradient(19deg, rgb(28, 117, 250), rgb(34, 2, 159));
      position: fixed;
      transition: 0.5s;
      overflow: hidden;
      z-index: 1000;
    }
    
    .navigation:hover {
      width: 280px;
    }
    
    .navigation ul {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      padding-left: 0;
    }
    
    .navigation ul li {
      position: relative;
      width: 100%;
      list-style: none;
    }
    
    .navigation ul li:hover {
      background: #1a73e8;
    }
    
    .navigation ul li.active {
      background: #1a73e8;
    }
    
    .navigation ul li a {
      position: relative;
      display: block;
      width: 100%;
      display: flex;
      text-decoration: none;
      color: white;
    }
    
    .navigation ul li a .icon {
      position: relative;
      display: block;
      min-width: 80px;
      height: 60px;
      line-height: 60px;
      text-align: center;
      font-size: 24px;
    }
    
    .navigation ul li a .title {
      position: relative;
      display: block;
      height: 60px;
      line-height: 60px;
      white-space: nowrap;
    }
    
    @media (max-width: 992px) {
      .navigation {
        left: -80px;
      }
      
      .navigation.active {
        left: 0;
        width: 280px;
      }
      
      .main-content {
        margin-left: 0;
      }
    }
  </style>
</head>

<body>
  <div class="navigation">
    <ul>
      <li class="list">
        <a href="/dashboard">
          <span class="icon"><i class="fas fa-home"></i></span>
          <span class="title">Dashboard</span>
        </a>
      </li>
      
      <li class="list active">
        <a href="/appointment">
          <span class="icon"><i class="fas fa-calendar-check"></i></span>
          <span class="title">Appointment</span>
        </a>
      </li>
      
      <li class="list">
        <a href="/disease">
          <span class="icon"><i class="fas fa-search-plus"></i></span>
          <span class="title">Search Disease</span>
        </a>
      </li>
      
      <li class="list">
        <a href="/calorie_tracker">
          <span class="icon"><i class="fas fa-utensils"></i></span>
          <span class="title">Diet Tracker</span>
        </a>
      </li>
      
      <li class="list">
        <a href="/profile">
          <span class="icon"><i class="fas fa-user-cog"></i></span>
          <span class="title">Edit Profile</span>
        </a>
      </li>
      
      <li class="list">
        <a href="#">
          <span class="icon"><i class="far fa-question-circle"></i></span>
          <span class="title">Help</span>
        </a>
      </li>
      
      <li class="list">
        <a href="/auth/logout">
          <span class="icon"><i class="fas fa-sign-out-alt"></i></span>
          <span class="title">Sign Out</span>
        </a>
      </li>
    </ul>
  </div>

  <div class="main-content" style="margin-left: 80px; transition: 0.5s;">
    <div class="container-fluid py-4">
      <!-- Calendar Section -->
      <div class="row justify-content-center mb-4">
        <div class="col-lg-8">
          <div class="calendar-container">
            <div class="calendar-header">
              <h5 class="mb-0" id="month"></h5>
              <h6 class="mb-0" id="year"></h6>
            </div>
            <table class="table calendar-table mb-0">
              <thead>
                <tr>
                  <th>Mo</th>
                  <th>Tu</th>
                  <th>We</th>
                  <th>Th</th>
                  <th>Fr</th>
                  <th>Sa</th>
                  <th>Su</th>
                </tr>
              </thead>
              <tbody class="days" id="days"></tbody>
            </table>
          </div>
          <p class="text-muted mt-2 text-center">The appointments are for the current month only</p>
        </div>
      </div>

      <!-- Appointment Form -->
      <div class="row justify-content-center mb-4">
        <div class="col-lg-8">
          <div class="appointment-form">
            <form id="form_create_appointment" method="POST" action="/appointment">
              <div class="row g-3">
                <div class="col-md-6">
                  <label class="form-label required">Date</label>
                  <input class="form-control" name="date" id="date" required readonly
                    data-bs-toggle="tooltip" data-bs-placement="top"
                    title="Select a date from the calendar above">
                </div>
                <div class="col-md-6">
                  <label class="form-label">Description</label>
                  <input class="form-control" type="text" id="description" name="description" required>
                </div>
                
                <div class="col-md-6">
                  <label class="form-label required">Start Time</label>
                  <input class="form-control" type="time" name="start_time" id="start_time" required>
                </div>
                <div class="col-md-6">
                  <label class="form-label required">End Time</label>
                  <input class="form-control" type="time" id="end_time" name="end_time" required>
                </div>
                
                <div class="col-md-6 mt-3">
                  <button type="reset" class="btn btn-warning w-100">Clear Form</button>
                </div>
                <div class="col-md-6 mt-3">
                  <button type="submit" class="btn btn-primary w-100">Make Appointment</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Appointments List -->
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="appointments-table">
            <div class="card-header">
              <h4 class="mb-0 text-white">Your Appointments</h4>
            </div>
            <div class="table-responsive">
              <table class="table table-hover mb-0" id="appointment_list">
                <thead>
                  <tr>
                    <th class="text-center">Date</th>
                    <th class="text-center">Description</th>
                    <th class="text-center">Start</th>
                    <th class="text-center">End</th>
                    <th class="text-center">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <%if(appointments.length> 0) {%>
                    <% for(var i=0;i<appointments.length;i++) { %>
                      <tr class="text-center align-middle">
                        <td>
                          <%= appointments[i].date %>
                        </td>
                        <td style="max-width: 150px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                          <%= appointments[i].description %>
                        </td>
                        <td>
                          <%= appointments[i].start_time %>
                        </td>
                        <td>
                          <%= appointments[i].end_time %>
                        </td>
                        <td>
                          <button class="btn btn-danger btn-sm" onclick="Delete(this)">
                            <i class="fas fa-trash"></i>
                          </button>
                        </td>
                      </tr>
                    <% } %>
                  <% } %>
                </tbody>
              </table>
            </div>
            <div class="card-footer text-center">
              <button type="button" class="btn btn-danger" id="btn_clear_storage" onclick="clear_storage()">
                Clear All Appointments
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- jQuery -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <!-- IziToast -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/js/iziToast.min.js"></script>
  
  <script>
    // Initialize tooltips
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
      return new bootstrap.Tooltip(tooltipTriggerEl)
    });
    
    function Delete(x) {
      x.closest('tr').remove();
    }

    // Calendar functionality
    document.addEventListener('DOMContentLoaded', function() {
      const monthElement = document.getElementById('month');
      const yearElement = document.getElementById('year');
      const daysElement = document.getElementById('days');
      const dateInput = document.getElementById('date');
      
      const months = [
        "January", "February", "March", "April", "May", "June",
        "July", "August", "September", "October", "November", "December"
      ];
      
      const date = new Date();
      let currentMonth = date.getMonth();
      let currentYear = date.getFullYear();
      
      function renderCalendar() {
        date.setDate(1);
        
        const firstDayIndex = date.getDay();
        const lastDay = new Date(currentYear, currentMonth + 1, 0).getDate();
        const prevLastDay = new Date(currentYear, currentMonth, 0).getDate();
        const lastDayIndex = new Date(currentYear, currentMonth + 1, 0).getDay();
        const nextDays = 7 - lastDayIndex - 1;
        
        monthElement.textContent = months[currentMonth];
        yearElement.textContent = currentYear;
        
        let days = "";
        
        // Previous month days
        for (let x = firstDayIndex; x > 0; x--) {
          days += `<td class="text-muted">${prevLastDay - x + 1}</td>`;
        }
        
        // Current month days
        const today = new Date();
        for (let i = 1; i <= lastDay; i++) {
          const isToday = 
            i === today.getDate() && 
            currentMonth === today.getMonth() && 
            currentYear === today.getFullYear();
            
          const dayClass = isToday ? 'today' : '';
          days += `<td class="${dayClass}" onclick="selectDate(this, ${i})">${i}</td>`;
        }
        
        // Next month days
        for (let j = 1; j <= nextDays; j++) {
          days += `<td class="text-muted">${j}</td>`;
        }
        
        daysElement.innerHTML = days;
      }
      
      window.selectDate = function(element, day) {
        // Remove selected class from all cells
        document.querySelectorAll('#days td').forEach(cell => {
          cell.classList.remove('selected');
        });
        
        // Add selected class to clicked cell
        element.classList.add('selected');
        
        // Format date as YYYY-MM-DD
        const formattedMonth = (currentMonth + 1).toString().padStart(2, '0');
        const formattedDay = day.toString().padStart(2, '0');
        const selectedDate = `${currentYear}-${formattedMonth}-${formattedDay}`;
        
        // Set the date input value
        dateInput.value = selectedDate;
      }
      
      renderCalendar();
    });
  </script>
</body>

</html>
