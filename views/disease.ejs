        "Orthopedist": "Bone and joint issues",
        "Endocrinologist": "Hormonal disorders",
        "Nephrologist": "Kidney diseases"
      };
      
      let message = "Medical Specialists:\n\n";
      for (const [specialist, description] of Object.entries(specialists)) {
        message += `${specialist}: ${description}\n\n`;
      }
      
      alert(message);
    }

    function searchDiseases() {
      const searchTerm = document.getElementById('diseaseSearch').value.toLowerCase();
      if (!searchTerm) {
        alert("Please enter a search term");
        return;
      }
      
      let found = false;
      for (const [bodyPart, data] of Object.entries(diseaseData)) {
        const content = data.content.toLowerCase();
        if (content.includes(searchTerm)) {
          showDiseaseInfo(bodyPart);
          found = true;
          break;
        }
      }
      
      if (!found) {
        alert("No diseases found matching your search. Try a different term.");
      }
    }

    // Initialize the page
    document.addEventListener('DOMContentLoaded', function() {
      // Set up event listeners
      document.getElementById('analyzeSymptoms').addEventListener('click', analyzeSymptoms);
      document.getElementById('searchButton').addEventListener('click', searchDiseases);
      
      // Show brain info by default
      showDiseaseInfo('brain');
      
      // Initialize navigation active state
      const list = document.querySelectorAll(".list");
      
      function activateNavItem() {
        list.forEach((item) => {
          item.classList.remove("active");
          this.classList.add("active");
        });
      }
      
      list.forEach((item) => {
        item.addEventListener("mouseover", activateNavItem);
      });
      
      // Set current page as active
      const currentPage = window.location.pathname;
      list.forEach(item => {
        const link = item.querySelector('a');
        if (link.getAttribute('href') === currentPage) {
          item.classList.add('active');
        }
      });
    });
  </script>
