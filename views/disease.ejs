    function showDiseaseInfo(bodyPart) {
      const infoSection = document.getElementById('diseaseInfo');
      const titleElement = document.getElementById('diseaseTitle');
      const contentElement = document.getElementById('diseaseContent');
      
      if (diseaseData[bodyPart]) {
        titleElement.textContent = diseaseData[bodyPart].title;
        contentElement.innerHTML = diseaseData[bodyPart].content;
        infoSection.style.display = 'block';
        
        // Scroll to the info section
        infoSection.scrollIntoView({ behavior: 'smooth' });
      } else {
        titleElement.textContent = "Information Not Available";
        contentElement.innerHTML = `
          <div class="alert alert-warning">
            Detailed information about this body system is not currently available. 
            Our AI-powered medical assistant (coming soon) will be able to provide 
            comprehensive information about all body systems and their related conditions.
          </div>
        `;
        infoSection.style.display = 'block';
      }
    }

    function analyzeSymptoms() {
      const symptomsInput = document.getElementById('symptomsInput').value.toLowerCase();
      if (!symptomsInput) {
        alert("Please enter at least one symptom");
        return;
      }
      
      const symptoms = symptomsInput.split(',').map(s => s.trim());
      const possibleConditions = new Set();
      
      symptoms.forEach(symptom => {
        if (symptomMap[symptom]) {
          symptomMap[symptom].forEach(condition => possibleConditions.add(condition));
        }
      });
      
      const resultsContainer = document.getElementById('possibleConditions');
      resultsContainer.innerHTML = '';
      
      if (possibleConditions.size > 0) {
        possibleConditions.forEach(condition => {
          const li = document.createElement('li');
          li.className = 'list-group-item';
          li.textContent = condition;
          resultsContainer.appendChild(li);
        });
      } else {
        const li = document.createElement('li');
        li.className = 'list-group-item';
        li.textContent = 'No specific conditions identified based on these symptoms';
        resultsContainer.appendChild(li);
      }
      
      document.getElementById('symptomResults').style.display = 'block';
    }

